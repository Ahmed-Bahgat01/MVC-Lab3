@model Student
@{
    ViewBag.Title = "Edit";

}


<div style="height:100vh" class="d-flex align-items-center justify-content-center">
    <form asp-action="edit" class="d-flex flex-column align-items-center p-5 border border-3 w-25">
        <input asp-for="Id" type="hidden" /> <br />
        <div class="mb-3">
            <label class="form-label">Name</label> <input asp-for="Name" class="form-control w-auto" />
            <span asp-validation-for="Name"></span>
        </div>
        <div class="mb-3 w-100">
            <label class="form-label">Department</label>
            <select class="form-select" asp-for="DepartmentId" asp-items="ViewBag.Departments">
            </select>
            <span asp-validation-for="Department"></span>
        </div>
        <input type="submit" class="btn btn-success w-auto" />
    </form>
</div>

@section Scripts{
        <partial name="_ValidationScriptsPartial" />
}
