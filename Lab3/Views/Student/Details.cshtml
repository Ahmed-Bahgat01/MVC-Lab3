@model Student
@{
    ViewBag.Title = "Details";

}


<div style="height:100vh" class="d-flex justify-content-center align-items-center text-dark">
    <div class="bg-warning w-25 p-5 rounded-3 border border-5 border-dark">
        <div class="d-flex align-items-center justify-content-between">
            <h2 class="text-decoration-underline">ID:</h2><h2>@Model.Id</h2>
        </div>
        <div class="d-flex align-items-center justify-content-between">
            <h2 class="text-decoration-underline">Name:</h2><h2>@Model.Name</h2>
        </div>
    </div>
</div>