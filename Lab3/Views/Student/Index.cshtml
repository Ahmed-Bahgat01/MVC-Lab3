@model IEnumerable<Student>
@{
    Layout = "_CLayout";
}


<div class="d-flex flex-column justify-content-center align-items-center">
    <div class="d-flex flex-column justify-content-center align-items-start w-75 m-4">
        <table class="table table-bordered table-hover">
            <thead class="bg-danger text-light">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model?.Count() == 0)
                {
                    <tr colspan="2"> NO DATA</tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>

                                <a href="/student/details/@item.Id" class="btn btn-success btn-rounded">
                                    <i class="fa-regular fa-circle-info"></i>
                                    Details
                                </a>

                                <a href="/student/edit/@item.Id" class="btn btn-primary">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                    Edit
                                </a>

                                <a href="/student/delete/@item.Id" class="btn btn-danger"
                            onclick="return confirm('Are you sure you want to delete student \nID: @item.Id, Name: @item.Name')">
                                    <i class="fa-solid fa-trash-can"></i>
                                    Delete
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        <a href="/student/create" class="btn btn-danger">Add Student</a>
    </div>
</div>
