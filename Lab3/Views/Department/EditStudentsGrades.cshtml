@model IEnumerable<StudentCourse>

@{
    ViewData["Title"] = "EditStudentsGrades";
    Layout = "~/Views/Shared/_CLayout.cshtml";
}

<h1>Edit Students Grades</h1>
<form method="post">
    <table class="table">
        <thead>
            <tr>
                <th>
                    Student Name
                </th>
                <th>
                    Grade
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item?.Student?.Name)
                    </td>
                    <td>
                        <input type="number" value="@item?.Grade" name="stdGrade.@item?.StudentId" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <input type="submit" value="submit" class="btn btn-danger" />
</form>

