@model IEnumerable<StudentCourse>

@{
    ViewData["Title"] = "EditStudentsGrades";
    Layout = "~/Views/Shared/_CLayout.cshtml";
}

<h1>Edit Students Grades</h1>
<form method="post">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Student.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Grade)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Student.Name)
                    </td>
                    <td>
                        @*@Html.DisplayFor(modelItem => item.Grade)*@
                        <input type="number" value="@item.Grade" name="stdGrade.@item.StudentId" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <input type="submit" value="submit" class="btn btn-danger" />
</form>

